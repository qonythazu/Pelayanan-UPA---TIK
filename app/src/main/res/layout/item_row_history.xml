<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/img_history_item"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_history_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_history_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_history_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/primary_blue"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tv_history_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/btnTaken"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/barang_sudah_saya_ambil"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/primary_blue"
            android:background="#F5F5FF"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/btnReturned"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/barang_sudah_saya_kembalikan"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/primary_blue"
            android:background="#F5F5FF"
            android:foreground="?attr/selectableItemBackground" />
    </LinearLayout>

</androidx.cardview.widget.CardView>